                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="#FFC5C5C5">
                    <StackPanel>
                        
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="#FFC5C5C5">
                    <StackPanel>

