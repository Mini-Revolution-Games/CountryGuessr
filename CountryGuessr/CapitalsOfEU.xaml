                        <Image Source="/C_EU/EuropeMapTallin.png" Visibility="Hidden"  Name="tallin" Margin="0,-328,0,0" Stretch="Fill" Width="410"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

    </Grid>
</Window>
